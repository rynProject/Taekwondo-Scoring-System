<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="app.tfkproject.taekwondoserver.MainActivity">



    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#FF0000FF"
            android:gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ind_biru_cl1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="#c9c8c8"
                    android:layout_gravity="center"
                    android:text="0"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="20dp"/>

                <TextView
                    android:id="@+id/ind_biru_cl2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="#bcbcbc"
                    android:layout_gravity="center"
                    android:text="0"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="20dp"/>

                <TextView
                    android:id="@+id/ind_biru_cl3"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="#b4b4b4"
                    android:layout_gravity="center"
                    android:text="0"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="20dp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/biru"
            android:background="#FF0000FF"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Chung"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="#ffff"/>

            <TextView
                android:id="@+id/txt_gamejom_biru"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="0"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="#ffff"/>

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="0"
                android:textAlignment="center"
                android:textColor="#ffff"
                android:textSize="135dp"
                android:id="@+id/scorebiru"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:gravity="bottom">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:orientation="horizontal"
                    android:gravity="bottom|left">

                    <Button
                        android:id="@+id/minbiru"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:text="-" />

                    <TextView
                        android:id="@+id/poinbiru"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Point"
                        android:textColor="#fff" />

                    <Button
                        android:id="@+id/plusbiru"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:text="+" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="horizontal"
                    android:gravity="bottom|right">

                    <Button
                        android:id="@+id/gamjeomminbiru"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:text="-" />

                    <TextView
                        android:id="@+id/gamjeombiru"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gamjeom"
                        android:textColor="#fff" />

                    <Button
                        android:id="@+id/gamjeomplusbiru"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:text="+" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/merah"
            android:background="#FFFF0000"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Hong"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="#ffff"/>

            <TextView
                android:id="@+id/txt_gamejom_merah"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="0"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="#ffff"/>

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="0"
                android:textAlignment="center"
                android:textColor="#ffff"
                android:textSize="135dp"
                android:id="@+id/scoremerah"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:orientation="horizontal"
                    android:gravity="bottom|right">

                    <Button
                        android:id="@+id/minmerah"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:text="-" />

                    <TextView
                        android:id="@+id/poinmerah"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Point"
                        android:textColor="#fff" />

                    <Button
                        android:id="@+id/plusmerah"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:text="+" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="horizontal"
                    android:gravity="bottom|right">

                    <Button
                        android:id="@+id/gamjeomminmerah"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:text="-" />

                    <TextView
                        android:id="@+id/gamjeommerah"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gamjeom"
                        android:textColor="#fff" />

                    <Button
                        android:id="@+id/gamjeoumplusmerah"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:text="+" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#FFFF0000"
            android:gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ind_merah_cl1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="#c9c8c8"
                    android:layout_gravity="center"
                    android:text="0"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="20dp"/>

                <TextView
                    android:id="@+id/ind_merah_cl2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="#bcbcbc"
                    android:layout_gravity="center"
                    android:text="0"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="20dp"/>

                <TextView
                    android:id="@+id/ind_merah_cl3"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="#b4b4b4"
                    android:layout_gravity="center"
                    android:text="0"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="20dp"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textColor="#fff"
        android:text="0:0"
        android:textSize="33dp"/>

    <TextView
        android:id="@+id/ronde"
        android:layout_below="@id/timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textColor="#fff"
        android:text="(mulai)"
        android:textSize="25dp" />

</RelativeLayout>
